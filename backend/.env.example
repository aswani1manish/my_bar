# MongoDB Configuration
# For local development:
# MONGO_URI=mongodb://localhost:27017/

# For MongoDB Atlas (Cloud):
# Replace <username>, <password>, <cluster-url> with your MongoDB Atlas credentials
# Example: MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/

# Database name
DATABASE_NAME=neighborhood_sips

# Flask Configuration
# For production, set FLASK_ENV=production and FLASK_DEBUG=False
FLASK_ENV=development
FLASK_DEBUG=True

# CORS Configuration
# For local development: http://localhost:8000
# For PythonAnywhere: https://yourusername.pythonanywhere.com
# Multiple origins can be comma-separated
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
